<CameraClick>:
    cols: 1
    BoxLayout:
        
        orientation: 'vertical'
        Camera:
            id: camera
            resolution: (1920, 1080)
            play: False
            index: 0
            
        ToggleButton:
            text: 'Play'
            on_press: camera.play = not camera.play
            size_hint_y: None
            height: '48dp'
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()